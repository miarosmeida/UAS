<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateOrderActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data Order Disini"
        android:textSize="20sp"
        android:textColor="@color/blue2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textStyle="bold"
        />
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_idu"
        android:hint="ID Order"
        />
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_idproduku"
        android:hint="ID Product"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_namacustu"
        android:hint="Nama Customer"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_alamatu"
        android:hint="Alamat Customer"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_jumlahu"
        android:hint="Jumlah Product"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_totalu"
        android:hint="Total Hargau"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            style="@style/btn_Style"
            android:id="@+id/btn_updateorder"
            android:text="Update"
            android:onClick="updateDataOrder"/>
        <Button
            android:id="@+id/btn_cancelorder"
            style="@style/btn_Style"
            android:text="Cancel"
            android:onClick="cancelDataOrder"/>
    </LinearLayout>


</LinearLayout>